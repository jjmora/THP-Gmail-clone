function show_email(){
  box = document.getElementById("content")
  while (box.firstChild) {
    box.removeChild(box.firstChild);
  }
  document.getElementById("content").insertAdjacentHTML("afterbegin", "<%= j render 'email_list', email: @email %>")


  list_element = document.getElementById("list-<%= @email.id %>")

  check_class = document.getElementById("list-<%= @email.id %>").classList.contains('unread')

  if(check_class == true){
    list_element.classList.remove('unread')
  } 

}
show_email()