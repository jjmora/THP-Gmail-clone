<div class="container bootdey">
  <div class="email-app mb-4 d-flex ">
    <nav class="col-pixel-width-130">
        <%= link_to "Receive Email", emails_path, method: :post, class: "btn btn-danger btn-block", remote: true %>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa fa-inbox"></i> Inbox <span class="badge badge-danger" id="inbox-msgs"><%= @email.count %></span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa fa-star"></i> Stared</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa fa-rocket"></i> Sent</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa fa-trash-o"></i> Trash</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa fa-bookmark"></i> Important</a>
            </li>
        </ul>
    </nav>

    <main class="inbox col-6">
      <div class="toolbar">
        <div class="btn-group">
            <button type="button" class="btn btn-light">
                <span class="fa fa-envelope"></span>
            </button>
            <button type="button" class="btn btn-light">
                <span class="fa fa-star"></span>
            </button>
            <button type="button" class="btn btn-light">
                <span class="fa fa-star-o"></span>
            </button>
            <button type="button" class="btn btn-light">
                <span class="fa fa-bookmark-o"></span>
            </button>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-light">
                <span class="fa fa-mail-reply"></span>
            </button>
            <button type="button" class="btn btn-light">
                <span class="fa fa-mail-reply-all"></span>
            </button>
            <button type="button" class="btn btn-light">
                <span class="fa fa-mail-forward"></span>
            </button>
        </div>
        <button type="button" class="btn btn-light">
            <span class="fa fa-trash-o"></span>
        </button>
        <div class="btn-group">
          <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
              <span class="fa fa-tags"></span>
              <span class="caret"></span>
          </button>
          <div class="dropdown-menu">
              <a class="dropdown-item" href="#">add label <span class="badge badge-danger"> Home</span></a>
              <a class="dropdown-item" href="#">add label <span class="badge badge-info"> Job</span></a>
              <a class="dropdown-item" href="#">add label <span class="badge badge-success"> Clients</span></a>
              <a class="dropdown-item" href="#">add label <span class="badge badge-warning"> News</span></a>
          </div>
        </div>
        <%# <div class="btn-group float-right">
          <button type="button" class="btn btn-light">
              <span class="fa fa-chevron-left"></span>
          </button>
          <button type="button" class="btn btn-light">
              <span class="fa fa-chevron-right"></span>
          </button>
        </div> %>
      </div>

      <ul class="messages" id="listing">
        <% @email.each do |email| %>
          <% if email.read == true %>
            <li class="message pt-2" id="list-<%= email.id %>">
            <div class="d-flex" id="list-div-<%= email.id %>">
          <% else %>
            <li class="message unread pt-2" id="list-<%= email.id %>">
            <div class="d-flex list-emails" id="list-div-<%= email.id %>">
          <% end %>
              <div class="col-pixel-width-70">
                <div class="actions">
                    <%= link_to email_path(email.id), method: 'delete', remote: true do %> 
                      <span class="action">
                        <i class="fa fa-trash"></i>
                      </span>
                    <% end%>

                      <%# <span class="action">
                        <i class="fa fa-envelope"></i>
                      </span> %>
                </div>
              </div>
              <div>
                <%= link_to email_path(email.id), method: 'get', remote: true do %>
                  <div class="header">
                    <span class="from">
                      <%= email.email %>
                    </span>
                    <span class="date">
                    <span class="fa fa-paper-clip"></span> <%= email.created_at %></span>
                  </div>
                  <div class="title">
                  <%= email.objet %>
                  </div>
                  <em><small id="txt-<%= email.id%>"><%= email.read %></small></em>
                <% end %>

              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </main>

    <section class="col-4 mt-5">
      <div>
        <div class="content p-5" id="content">
        </div>
      </div>
    </section>

  </div>
</div>
